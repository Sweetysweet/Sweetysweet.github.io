mixinProduct()
  .product
    margin 20px 0 170px 0
    @media $tablet
      margin 30px 0 0 30px
    .product__content
      display flex
      @media $tablet
        flex-direction column
      &_description
        width 1064px
        height 430px
        background-color $white
        @media $tablet
          width 759px
          height 100%
        &_title
          padding 20px 30px
          margin-bottom 0
          border-bottom solid 2px #e8e8e8
          a
            font-size 24px
            font-weight $thin
            @media $tablet
              font-size 30px
            &::after
              content '>'
              margin-left 15px
              color #bdbdbd
        .product__content_wrapper_carts 
          display flex
          justify-content space-around
          @media $tablet
            display block
          .cart-wrapper
            height 360px
            position relative
            @media $tablet
              column-count 2
              border-bottom 1px solid #e8e8e8  
            &:not(:last-child)::after
              content ''
              position absolute
              width 2px 
              height 100%
              right -63px
              top 0
              background-color #e8e8e8
              @media $tablet
                display none
                    
          .product__content_cart
            text-align center
            margin-top 33px
            
            @media $tablet
              margin-left -107px
            .product__content_carts_description
              @media $tablet
                text-align justify
                padding-top 8px
                margin-left 80px 
            .product__content_carts_description_flag
              margin-top 23px
              margin-bottom 17px
            .product__content_carts_description_content
              @media $tablet
                font-size 30px
                width 200px  
            .product__content_carts_description_price
              @media $tablet
                font-size 30px
            .product__content_carts_description_logo 
              margin-top 15px
              @media $tablet
                margin-top 17px

      &_slider
        width 455px
        height 430px
        margin-left 21px
        @media $tablet
          width 817px
          margin 30px 0 30px -30px
        .swiper-wrapper
          .swiper-slide
            background url(../img/content/partner-service.png) center/cover no-repeat
            height 430px
            @media $tablet
              width 817px!important
            &__description
              padding 256px 50px 0
              color $white
              @media $tablet
                padding-top 209px
              &_toptext
                font-size 40px
                @media $tablet
                  font-size 50px
              &_content
                font-size 16px
                @media $tablet
                  font-size 30px  
              &_button
                margin-top 28px
                a
                  color $white
                  font-size 16px
                  @media $tablet
                    font-size 30px
              
        .swiper-pagination
          transition .2s
          &-bullet
            cursor pointer
            background-color $white
mixinProduct()