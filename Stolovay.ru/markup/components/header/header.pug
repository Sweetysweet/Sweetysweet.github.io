mixin header(data = {})
  -
    // Globals: SITE_TITLE, DEFS, MENU, MENU_PROFILE
    const {
      list = ['Компания', 'Портфолио', 'Проектирование', 'Ресторанам', 'Застройщикам', 'Гос.заказчикам', 'Таблет-питание', 'Сервис', 'Контакты'],
      imgPath = '%=static=%img/content/'
    }= data; 
  header.header
    .menu-wrapper
      .wrapper
        .content__wrapper
          nav.mobile-menu
            input(type="checkbox")#checkbox.mobile-menu__checkbox
            label(for="checkbox").mobile-menu__btn
              .mobile-menu__icon
            .mobile-menu__container
              ul.mobile-menu__list
                each item in list
                  li.mobile-menu__item
                    a(href="#").mobile-menu__link= item  
          nav.nav-menu
            ul.nav-item
              each item in list
                li.nav-item__link 
                  a(href='#')= item
          .menu__contact
            .menu__contact_mail
              //- a(href="#")
              img(src=`${imgPath}header_email.png`, alt="mail-icon")
              span info@stolovay.ru
            .menu__contact_phone 
              img(src=`${imgPath}header_phone.svg`, alt="phone-icon")
              span 8 495 790-72-05
            .contact-popup
              .contact-popup__close
                  button(type="button").close-btn X
              .contact-popup-wrapper
                .contact-popup-wrapper__left
                  .contact-popup-wrapper__left_phone
                    span.contact-popup-wrapper__left_phone_tel 8 495 790-72-05
                    span.contact-popup-wrapper__left_phone_sub Мы принимаем звонки без выходных.
                  .contact-popup-wrapper__left_social  
                    span.contact-popup-wrapper__social_title Выберите способ связи:
                    ul
                      li 
                        img(src=`${imgPath}popup-phone.png`, alt="") 
                        span Мобильный
                      li 
                        img(src=`${imgPath}popup-viber.png`, alt="") 
                        span Viber
                      li 
                        img(src=`${imgPath}popup-tg.png`, alt="") 
                        span Telegram
                      li 
                        img(src=`${imgPath}popup-whatsapp.png`, alt="") 
                        span Whatsapp
                .contact-popup-wrapper__right
                  .contact-popup-wrapper__right_callback
                    span.contact-popup-wrapper__right_callback_title Обратный звонок:
                    span.contact-popup-wrapper__right_callback_sub Мы перезвоним вам в течении часа
                  form.contact-popup-wrapper__right_form
                    span.contact-popup-wrapper__right_form_title Имя:
                    input(type="text")
                    span.contact-popup-wrapper__right_form_title Телефон:
                    input(type="text")
                    button(type="submit") Отправить
                  
                      
                    
                    
      .header-menu__middleware
        .wrapper
          .content__wrapper
            .header-menu__middleware_logo
              a(href='#')
                img(src=`${imgPath}logo.svg`, alt="logo")
                span Столовая.РУ
            form.search-form  
              .header-menu__middleware_select
                .select
                  select(name="findCategory") 
                    option(value="" disabled) выберите категорию:
                    option(value="1") Тепловое
                    option(value="2") Холодильное
                    option(value="3") Электромеханическое
                    option(value="4") Посудомоечное
                    option(value="5") Барное
                    option(value="6") Хлебопекарное
                    option(value="7") Линии раздачи
                    option(value="8") Нейтральное
                    option(value="9") Для фаст фуда
                    option(value="10") Для залов
                    option(value="11") Весовое
                    option(value="12" selected) Все
              .header-menu__middleware_search
                .wrap-input
                  input.input(type="text", name="search")
              .search-button
                button(type="submit" class="btn")
                  img(src=`${imgPath}search-icon.svg`, alt="search-btn")
            .vendor-wrapper
              .vendor-wrapper_vendor
                .middleware_vendor-img 
                  img(src=`${imgPath}vendors.png`, alt="поставщики")
                .middleware_vendor-text
                  span Мы на портале поставщиков  
              .vendor-wrapper_cart
                .cart-left
                  .cart-count
                    span 0
                  img(src=`${imgPath}shop-cart.png`, alt="shop-cart")
                .cart-right
                  .cart-right__sum
                    span Сумма
                  .cart-right__num 
                    span 0 руб.

