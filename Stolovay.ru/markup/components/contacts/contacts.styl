mixinContacts()
  .contacts
    width 1900px
    background-color #282828
    @media $tablet
      width 817px
    &-grid
      display flex
      justify-content space-between
      margin-top 97px
      @media $tablet
        margin-left 45px
        flex-direction column
      .contacts-col
        margin-left 70px
        &_title
          margin-bottom 40px
          span 
            color #777
            font-size 24px
          ul
            margin-top 40px
            @media $tablet
              display none
            li
              a
                color $white
                font-size 16px
          .fourthList
            li:nth-child(3),
            li:nth-child(5)
            li:nth-child(7)
              margin-bottom 30px  
mixinContacts()